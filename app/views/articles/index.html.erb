<div class='col-lg-6 mx-auto'>
  <%= link_to "Create New", new_article_path, class: 'btn btn-primary mb-3' %>

  <div id='articles'>
    <% @articles.each do |article| %>
      <div class='card shadow mb-3'>
        <div class='card-header bg-gradient bg-info p-2 text-dark bg-opacity-25'>
          <%= link_to article.title, article, class: 'card-title' %>
        </div>
        <div class='card-body'>
          
          <%= article.body %>
        </div>
      </div>
    <% end %>
  </div>
</div>



<%# link_to elper renders a link with its first argument as 
the link's text and its second argument as the link's destination %>