<div class='col-lg-6 mx-auto'>
    <%= link_to 'Home', articles_path , class: 'btn btn-primary mb-3'%>

    <div class="card shadow">
      <div class="card-header">
        <h1 class="card-title"><%= @article.title %></h1>
      </div>
      <div class="card-body">
        <%= @article.body %>
    </div>
    </div>
</div>

    <ul>
      <li><%= link_to 'Edit Article', edit_article_path(@article) %></li>
      <li><%= link_to 'Delete Article', article_path(@article), data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure, now?"
            } %></li>
    </ul>

    <%# This renders the _comment.html.erb partial as is %>
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>

    <%# This render passes each comment into the _comment.html.erb partial %>
    <h2>Comments</h2>
    <%= render @article.comments %>

    
